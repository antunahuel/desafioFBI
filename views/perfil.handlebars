<div class="contenedor_principal">
    {{>title}}
    
    <main class="container text-light">
        <hr class="line_white">

        {{#if error}}

        <section>
            <h2>{{error}}</h2>
        </section>

        {{else}}
        <section>
            <h2 class="text-center">Bienvenido(a)</h2>
            <div class="row  mt-5">
                <div class="col-12 col-md-6">
                    <img src="../assets/img/{{user.profile_img}}" alt="{{user.id}}">
                </div>
                 <div class="col-12 col-md-6">
                    <h3 class="mt-3">Inspector {{user.id}}</h3>
                    <hr class="line_white">
                    <ul>
                        <li>Nombre:{{user.name}}</li>
                        <li>Email:{{user.email}}</li>
                    </ul>
                    <hr class="line_white">
                </div>
            </div>
        </section>
        {{/if}}
    </main>
</div>



